extends ./layout
block titulo
  title Angular
block contenido
  .ed-container
    .ed-item
      h3 Agregar Actividad
      .ed-item
          input.form-control(type="text" placeholder="Agregar Actividad" ng-model="nuevaActividad.tarea")
      .ed-item
        a(href="#") Documento
        a(href="#") Foto
        a(href="#") Foto
        a(href="#") Foto
      .ed-item.main-end
        button.button.btn_uno(ng-click="agregarActividad()") Enviar
  .ed-container
    .ed-item
      ul.ed-menu.base-columna
        li.status(ng-repeat="actividad in actividades")
          .ed-container
            .ed-item.base-20.avatar-1
              img(src="/img/avatar.png", alt="")
            .ed-item.base-80.main-start.cross-center
              h4
            .ed-item.main-center
              p.tarea {{actividad.tarea}}
            .ed-item
              img(src="/img/4.png", alt="")
              p {{actividad.comentario}}
            .ed-item.base-70
              input.form-control(type="text" placeholder="Agregar Comentario" ng-model="coment")
            .ed-item.base-20.no-padding
              button.main-end.button.btn_dos(ng-click="comen()") Enviar
    .ed-item
      .ed-container
        .ed-item.coment
          ul.ed-menu.base-columna
            li(ng-repeat="comentario in comentarios") #[strong {{user}}] {{comentario.comentario}}
        .ed-item.base-70
          input.form-control(type="text" placeholder="Agregar Comentario" ng-model="nuevoComentario.comentario")
          input.form-control(type="text" ng-model="nuevoComentario.username")
        .ed-item.base-30
          button.main-end.button.btn_dos(ng-click="agregarComentario()") Enviar
