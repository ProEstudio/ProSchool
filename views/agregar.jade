extends ./layout
block titulo
  title Actividad
block contenido
 .ed-container
  .ed-item.animated.fadeInUp.base-70.sch_inpt
    input.inpt_sch.base-100(type="text" placeholder="Agregar Actividad" ng-model="nuevaActividad.tarea")
  .ed-item.animated.fadeInUp.base-30.sch_btn
    button.button.btn_cuatro.base-100(ng-click="agregarActividad()") Agregar
  .ed-container
    .ed-item
      ul.ed-menu.base-columna
        li.status(ng-repeat="actividad in actividades")
          .ed-container
            .ed-item.base-20.avatar-1
              img(src="/img/avatar.png", alt="")
            .ed-item.base-80.main-start.cross-center
              h4
            .ed-item.main-center
              p.tarea {{actividad.tarea}}
            .ed-item.coment
              img(src="/img/4.png", alt="")
              p {{actividad.comentario}}
            .ed-item.animated.fadeInUp.base-70.act_inpt
              input.inpt_cm.base-100(type="text" placeholder="AÃ±adir un comentario" ng-model="nuevaActividad.tarea")
            .ed-item.animated.fadeInUp.base-30.act_btn
              button.button.btn_cinco.base-100(ng-click="agregarActividad()") Enviar
    .ed-item
      .ed-container
        .ed-item.coment
          ul.ed-menu.base-columna
            li(ng-repeat="comentario in comentarios") #[strong {{user}}] {{comentario.comentario}}
        .ed-item.base-70
          input.form-control(type="text" placeholder="Agregar Comentario" ng-model="nuevoComentario.comentario")
          input.form-control(type="text" ng-model="nuevoComentario.username")
        .ed-item.base-30
          button.main-end.button.btn_dos(ng-click="agregarComentario()") Enviar
