extends ../layout
block titulo
  title Registro Estudiante
block contenido
   .ed-container
    .ed-item.regest
      form(action="/registro" method="post" enctype="multipart/form-data")
        .ed-container
          .ed-item
            h1.animated.fadeInLeft Datos Del Estudiante
          .ed-item.base-50
            input.animated.fadeInUp.form-control(type="text" name="nombre" placeholder="Nombre")
          .ed-item.base-50
            input.animated.fadeInUp.form-control(type="text" name="apellido" placeholder="Apellido")
          .ed-item
            input.animated.fadeInUp.form-control(type="text" name="usuario" placeholder="Nombre de Usuario")
            input.animated.fadeInUp.form-control(type="text" name="correo" placeholder="Correo Electronico (Opcional)")
            input.animated.fadeInUp.form-control(type="password" name="contraseña" placeholder="Contraseña")
            input.animated.fadeInUp.button.btn_rg(type="submit" value="Registrar")
